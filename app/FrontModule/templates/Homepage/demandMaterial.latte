				const zone{$zone->id} = new google.maps.Polygon({
				    paths: zone{$zone->id}Coords,
				    strokeColor: {$color},
				    strokeOpacity: 0.8,
				    strokeWeight: 2,
				    fillColor: {$color},
				    fillOpacity: 0.5,
				});

				zone{$zone->id}.setMap(map);
				
